extends layout

include mixins/_appNav

block content
  -
    const leftMenu = [
      { url: "/settings", title: "Settings", icon: "chevron-left" }
    ]
    const rightMenu = [
      { url: "/settings/categories/add", title: "Add category", icon: "plus-circle" }
    ]

  +appNav(title, leftMenu, rightMenu)

  div.app-page
    if categories
      ul.content__list
        each category in categories
          li.content__item
            a(href=`/settings/category/${category._id}/edit`)
              span.content__item__name
                span.transaction__pill(style=`background-color: ${category.color}`)= category.name
              span.content__item__action
                i(data-feather="chevron-right")
