extends layout

include mixins/_appNav

block content
  +appNav(title, menus.settingsCategories.appNavLeft, menus.settingsCategories.appNavRight)

  .content
    header.content__head
      h1 Categories

    if categories
      each group in categories
        header.content__head
          h2= group._id

        ul.content__list
          each category in group.categories
            li.content__item
              a(href=`/settings/category/${category._id}/edit`)
                span.content__item__dot(style=`background-color: ${category.color}`)
                span.content__item__name= `${category.name} (${category.count})`
                span.content__item__action
                  i(data-feather="chevron-right")
