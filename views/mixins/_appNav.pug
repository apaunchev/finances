mixin appNav(screenTitle = title, leftHref = "/", rightHref, leftIcon = "chevron-left", rightIcon = "chevron-right")
  nav.app-nav
    div
      - const onclickAction = leftHref === "" ? "window.history.go(-1); return false;" : "";
      a(href=`${leftHref}` onclick=`${onclickAction}`)
        i(data-feather=`${leftIcon}`)
    div
      span= screenTitle
    div
      if rightHref
        a(href=`${rightHref}`)
          i(data-feather=`${rightIcon}`)

mixin appSubNav(leftHref = "", leftTitle = "", leftSelected = false, rightHref = "", rightTitle = "", rightSelected = false)
  nav.app-sub-nav
    a(href=`${leftHref}` class=`${leftSelected ? 'selected' : ''}`)= leftTitle
    a(href=`${rightHref}` class=`${rightSelected  ? 'selected' : ''}`)= rightTitle
