extends layout

block content
  if year && month
    nav.page-nav
      .left
        a(href=`/transactions/${year}/${month}`)= `‚Üê ${h.getMonthName(month)} ${year}`
      .center= `${category.name}`
      .right &nbsp;
  if transactions
    .transactions
      each day in transactions
        .transactions__day
          h4.transactions__title= day.date
            span.day= day.dayOfWeek
            span.amount= day.totalAmount.toFixed(2)
          ol.transactions__list
            each t in day.transactions
              li.transactions__item
                a(href=`/transaction/${t._id}/edit`)= t.description
                  span.amount(style=`background-color: ${t.category.color}`)= `${t.amount.toFixed(2)}`
