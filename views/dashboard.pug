extends layout

block content
  nav.app-nav
    div
      a(href="/settings")
        i(data-feather="settings")
    div
      a(href="/transactions")= `${h.getMonthName(month)} ${year} â†“`
    div
      a(href="/add")
        i(data-feather="plus-circle")

  //- section.overview
  //-   h1.overview__number= `${expenses.toFixed()}`
  //-     span.overview__label Monthly expenses

  div.app-page
    section.cards
      each c in categories
        - const colorClass = c.totalAmount >= 0 ? "transaction__amount--positive" : "transaction__amount--negative"
        a.card.card--other(href=`/transactions/${year}/${month + 1}/${c._id}`)
          h1.card__title= c.name
          div.card__content
            span.card__icon
              i(data-feather=`${c.icon}`)
            span.card__amount(class=`${colorClass}`)= c.totalAmount.toFixed(2)
