extends layout

include mixins/_appNav
include mixins/_currencySelect

block content
  +appNav(title, menus.settingsAccount.appNavLeft)

  div.app-page
    form(action="/settings/account" method="POST" class="form")
      section.form__inputs
        input(type="email" name="email" placeholder="Email" value=user.email disabled)

        +currencySelect()

        input(type="submit" value="Save")
