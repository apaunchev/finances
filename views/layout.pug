doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= `${title}`
    link(rel="stylesheet" href="/dist/style.css")

  body
    block header
      if user
        header.header
          nav.nav
            a.nav__link(href="/" class=(currentPath === '/' ? 'nav__link--active' : '')) dashboard
            a.nav__link(href="/statistics" class=(currentPath === '/statistics' ? 'nav__link--active' : '')) statistics
      
      .content
        block messages
          if locals.flashes
            - const categories = Object.keys(locals.flashes)
            each category in categories
              each message in flashes[category]
                .flash(class=`flash--${category}`)
                  p!= message

        block content

  script(src="/dist/app.js")
