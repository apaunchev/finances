extends layout

include mixins/_appNav

block content
  +appNav()
  
  div.app-page
    if months
      ol.content__list
        each month in months
          - const colorClass = month.balance >= 0 ? 'transaction__amount--positive' : 'transaction__amount--negative'
          li.content__item
            a(href=`/transactions/${month._id.year}/${month._id.month}`)
              span.content__item__name= `${h.getMonthName(month._id.month - 1)} ${month._id.year}`
              span.content__item__action(class=`${colorClass}`)= month.balance.toFixed(2)
